chef_versions = [
  "13.11.3",
  "14.1.12",
  "14.2.0",
  "14.3.37",
  "14.4.56",
  "14.5.33",
]
chef_versions.each do |version|
  appraise "chef_#{version}" do
    gem "chef", version
    if !! RUBY_PLATFORM =~ /mswin|mingw|windows/
      gem "ffi"
      gem "ruby-wmi"
      gem "win32-service"
    end
  end
end
